-box :class => "hfeed" do
  %h3
    =:recent_posts.l
  = render :partial => 'posts/post', :collection => @posts
  =icon_link_to 'icon-plus-sign', :see_all_recent_posts.l, recent_path

=render :partial => 'shared/explore'

-widget do
  %ul.nav.nav-list
    %li.nav-header= :whats_hot.l
    -@popular_posts.each do |post|
      =render :partial => 'posts/sidebar_post', :locals => {:post => post}
    %li=icon_link_to 'icon-plus-sign', :see_all.l, popular_url

-widget do
  %ul.nav.nav-list
    %li.nav-header=:featured_writer.l
    -@featured_writers.each do |user|
      =render :partial => "users/sidebar_user", :locals => {:user => user}

-widget do
  %ul.nav.nav-list
    %li.nav-header= :active_users.l
    -@active_users.each do |user|
      =render :partial => "users/sidebar_user", :locals => {:user => user}
